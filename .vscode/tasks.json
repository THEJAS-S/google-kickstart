{
	"version": "2.0.0",
	"tasks": [
        {
            "type": "shell",
            "label": "Build C++",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "${file}",
                "-std=c++14",
                "-pthread",
                "-O0",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.out"
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "type": "shell",
            "label": "test",
            "command": "${workspaceFolder}/test.sh",
            "args": [
                "${relativeFileDirname}",
                "${fileExtname}"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}